modules = ["java-graalvm22.3"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build HyserCore"

[[workflows.workflow]]
name = "Build HyserCore"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean package -DskipTests"

[workflows.workflow.metadata]
outputType = "console"

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "vm"
run = ["echo", "This is a Minecraft Spigot plugin JAR file. To use this plugin:", "1. Download the JAR file from target/hysercore-1.0.0.jar", "2. Place it in your Minecraft server's plugins/ directory", "3. Start or restart your Minecraft server", "4. The plugin will load automatically and generate configuration files"]
build = ["mvn", "clean", "package", "-DskipTests"]
